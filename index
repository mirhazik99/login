<script type="text/javascript" id="dcoder_script">window.onload = function () {
  const loadingScreen = document.getElementById('loadingScreen');
  const mainScreen = document.getElementById('mainScreen');
  const loggedScreen = document.getElementById('loggedScreen');
  const loadingText = document.getElementById('loadingText');
  const youtubeBtn = document.getElementById('youtubeBtn');
  const telegramBtn = document.getElementById('telegramBtn');

  const steps = [
    "Getting Your ID...",
    "Making Registration...",
    "Getting Your Information...",
    "Making Eligible...",
    "Registered!",
  ];

  let stepIndex = 0;

  const updateLoadingText = () => {
    if (stepIndex < steps.length) {
      loadingText.textContent = steps[stepIndex];
      stepIndex++;
    } else {
      clearInterval(loadingInterval);
      loadingScreen.style.display = "none";
      mainScreen.style.display = "block";
    }
  };

  const loadingInterval = setInterval(updateLoadingText, 1000);

  youtubeBtn.onclick = function () {
    window.open("https://www.youtube.com/@GamesByHazik", "_blank");
    youtubeBtn.disabled = true;
    telegramBtn.disabled = false;
  };

  telegramBtn.onclick = function () {
    window.open("https://t.me/GamesByHazik", "_blank");
    mainScreen.style.display = "none";
    loggedScreen.style.display = "block";
  };
};</script></body></html>
